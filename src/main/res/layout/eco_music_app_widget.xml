<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:background="@drawable/shape_backround"
  android:padding="16dp">
  <ImageView
    android:id="@+id/btn_play_next"
    android:layout_width="36dp"
    android:layout_height="36dp"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="16dp"
    android:src="@drawable/ic_play_button" />
  <TextView
    android:id="@+id/id_song_name"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_toLeftOf="@+id/btn_play_next"
    android:fontFamily="monospace"
    android:text="Tap for play song"
    android:textSize="16sp" />
  <TextView
    android:id="@+id/tv_elapsed_time"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/id_song_name"
    android:layout_alignParentStart="true"
    android:layout_marginStart="8dp"
    android:layout_marginTop="0dp"
    android:text="0:00" />


</RelativeLayout>